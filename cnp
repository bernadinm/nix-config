apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: allow-fluentbit-from-datadog
  namespace: logging
spec:
  endpointSelector:
    matchLabels:
      name: fluent-bit
  ingress:
    - fromEndpoints:
        matchLabels:
          name: datadog
      toPorts:
        - ports:
            - port: "2020"
              protocol: TCP

